<%= form_for @task do |f| %>
  <%= f.label "Title:" %><br>
  <%= f.text_field :title %><br>

  <%= f.label "Details:" %><br>
  <%= f.text_area :details %><br>

  <% if request.path.include?("edit") %>
    <%=  f.label "Completed?" %>
    <%=  f.check_box :completed %>
  <% end %>
  
  <%= f.submit %>
<% end %>
